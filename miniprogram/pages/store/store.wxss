.summit{display: flex;justify-content: space-around; background-color: #3CB371;}
.summit-search-custom{width: 90%;}
.summit-search-field{width: 100%; }
.summit-dingdan{display: flex;flex-direction: column;justify-content: center;align-items: center;padding: 9px 12px;color: white;font-size: 8px;}

.summit-swiper{margin-bottom:10rpx;margin-left: 10rpx;margin-right: 10rpx;  height:300rpx;  border-radius: 10rpx;overflow: hidden;}
.summit-swiper image{ width:100%;border-radius: 10rpx;overflow: hidden;}
.summit-swiper-background{background-color:#3CB371;}

.divider{line-height:5px;}

.list{ display: flex;flex-direction: row; flex-wrap: wrap;justify-content: space-between;}
.item{display: flex;flex-direction: column;justify-content: space-between;width: 45%; margin: 15rpx;border:1px solid #9d9d9d;border-radius: 15px;}
.item image{width:100%;height: 300rpx;border-top-left-radius: 15px;border-top-right-radius: 15px;}
.item-text{padding: 5rpx;display: flex;flex-direction: column;}
.item-text-grade{font-size: 10pt;color: orange;}
.item-text-brief{font-size: 11pt;}
.item-bottom{ width:90%; display:flex;justify-content: space-between;align-items: baseline;padding: 0 10rpx 10rpx 10rpx;}
.item-bottom-price{color:red;}
.item-bottom-num{margin-left: 20rpx;font-size:10px;color:#8e8e8e;}